      <TitledPane collapsible="false" text="%backoffice.fiscal.correction.title" BorderPane.alignment="CENTER" />
   </top>
   <center>
      <BorderPane id="rootPane" fx:id="reportPane" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
