<BorderPane fx:id="rootPane" prefHeight="493.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="rs.petcom.master.controller.backoffice.fiscal.NalogIspravkeController">
