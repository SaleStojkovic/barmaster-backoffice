                     <GridPane.margin>
                        <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
                     </GridPane.margin>
                  </Label>
                  <ComboBox fx:id="cbPos" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity" onAction="#dateFromChange" prefHeight="30.0" prefWidth="150.0" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="3" />
               </children>
            </GridPane>
         </top>
         <center>
            <BorderPane id="reportPane" minHeight="-Infinity" minWidth="-Infinity" prefHeight="300.0" prefWidth="350.0" BorderPane.alignment="CENTER">
               <left>
                  <TableView fx:id="reciptTable" minHeight="-Infinity" minWidth="-Infinity" prefHeight="100.0" prefWidth="320.0" BorderPane.alignment="CENTER">
